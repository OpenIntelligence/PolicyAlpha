= simple_form_for [:account, policy] do |f|
  = f.input :title
  = f.input :description, input_html: { rows: 10, data: { behavior: 'markdown' } }
  = f.input :tag_list, input_html: { data: { behavior: 'tags-input' } }
  = f.association :category
  = f.button :submit, submit_text, class: 'btn btn-primary'

